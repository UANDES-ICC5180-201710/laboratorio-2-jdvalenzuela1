<h1>Add Student</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Code</th>
      <th>Person</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @course.title %></td>
      <td><%= @course.code %></td>
      <td><%= @course.person.id %></td>
    </tr>
  </tbody>
</table>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Last_Name</th>
      <th>Email</th>
      <th>Validation</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @students .each do |student| %>
      <tr>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.email %></td>
        <td><%= link_to "Add", {:controller => "courses", :action => "add_students", :course_id =>@course.id, :student_id => student.id }%></td>
      </tr>
    <% end %>
  </tbody>
</table>
